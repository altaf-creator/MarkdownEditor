<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <Platforms>AnyCPU;x64</Platforms>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <LangVersion>8.0</LangVersion>
    <ApplicationIcon>icon_markdowneditor.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="icon_markdowneditor.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="icon_markdowneditor.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CefSharp.Wpf" Version="111.2.20" />
    <PackageReference Include="Markdig" Version="0.31.0" />
    <PackageReference Include="Ookii.Dialogs.Wpf" Version="5.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="icon_markdowneditor.png" />
  </ItemGroup>

</Project>
